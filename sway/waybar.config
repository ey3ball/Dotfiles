{
    // -------------------------------------------------------------------------
    // Global configuration
    // -------------------------------------------------------------------------

    "position": "top",

    // If height property would be not present, it'd be calculated dynamically
    "height": 30,

    "modules-left": [
        "sway/workspaces",
        "sway/mode"
    ],
    "modules-center": [
        "sway/window"
    ],

    "modules-right": [
        "pulseaudio",
        "network",
        "memory",
        "cpu",
        "temperature",
        //"custom/keyboard-layout",
        "battery",
        "custom/clock",
        //"clock#time",
        "tray",
    ],


    // -------------------------------------------------------------------------
    // Modules
    // -------------------------------------------------------------------------
    "pulseaudio": {
         // "scroll-step": 1, // %, can be a float
         "format": "{icon} {volume}%",
         "format-bluetooth": "{volume}% {icon}Ôäî",
         "format-bluetooth-muted": "Ôö©Ô∏Å {icon}Ôäî",
         "format-muted": "ÔÄ¶Ô∏Å",
         "format-muted": "ÔÄ¶Ô∏Å",
         "format-source": "{volume}% ÔÑ∞",
         "format-source-muted": "ÔÑ±",
         "format-icons": {
             "headphone": "ÔÄ•",
             "hands-free": "ÔÄ•",
             "headset": "ÔÄ•",
             "phone": "ÔÇï",
             "portable": "ÔÇï",
             "car": "ÔÜπ",
             "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
         },
         "on-click": "pavucontrol"
     },
    "battery": {
        "interval": 10,
        "states": {
            "warning": 30,
            "critical": 15
        },
        // Connected to AC
        "format": "ÔÉß  {icon}  {capacity}%", // Icon: bolt
        // Not connected to AC
        "format-discharging": "{icon}  {capacity}%",
        "format-icons": [
            "ÔâÑ", // Icon: battery-full
            "ÔâÉ", // Icon: battery-three-quarters
            "ÔâÇ", // Icon: battery-half
            "ÔâÅ", // Icon: battery-quarter
            "ÔâÄ"  // Icon: battery-empty
        ],
        "tooltip": true
    },

    "custom/clock": {
        "interval": 1,
        "exec": "date +'%d %b %Y %H:%M:%S'",
    },

    //"clock#date": {
    //  "interval": 10,
    //  "format": "ÔÅ≥  {:%e %b %Y}", // Icon: calendar-alt
    //  "tooltip-format": "{:%e %B %Y}"
    //},

    "cpu": {
        "interval": 5,
        "format": "Ôãõ  {usage}% ({load})", // Icon: microchip
        "states": {
          "warning": 70,
          "critical": 90
        }
    },

    "custom/keyboard-layout": {
      "exec": "swaymsg -t get_inputs | grep -m1 'xkb_active_layout_name' | cut -d '\"' -f4",
      // Interval set only as a fallback, as the value is updated by signal
      "interval": 30,
      "format": "ÔÑú  {}", // Icon: keyboard
      // Signal sent by Sway key binding (~/.config/sway/key-bindings)
      "signal": 1, // SIGHUP
      "tooltip": false
    },

    "memory": {
        "interval": 5,
        "format": "ÔÉâ  {}%", // Icon: memory
        "states": {
            "warning": 70,
            "critical": 90
        }
    },

    "network": {
        "interval": 5,
        "format-wifi": "Ôá´  {essid} ({signalStrength}%)", // Icon: wifi
        "format-ethernet": "Ôûñ  {ifname}: {ipaddr}/{cidr}", // Icon: ethernet
        "format-disconnected": "‚ö†  Disconnected",
        "tooltip-format": "{ifname}: {ipaddr}"
    },

    "sway/mode": {
        "format": "<span style=\"italic\">Ôåû  {}</span>", // Icon: expand-arrows-alt
        "tooltip": false
    },

    "sway/window": {
        "format": "{}",
        "max-length": 120
    },

    "sway/workspaces": {
        "all-outputs": false,
        "disable-scroll": true,
        //"format": "{name}",
        //"format": "{icon} {name}",
        //"format-icons": {
        //    "1:www": "Ô§á", // Icon: firefox-browser
        //    "2:mail": "Ôä∂", // Icon: mail
        //    "3:editor": "ÔÑ°", // Icon: code
        //    "4:terminals": "ÔÑ†", // Icon: terminal
        //    "5:portal": "ÔÑ†", // Icon: terminal
        //    "urgent": "ÔÅ™",
        //    "focused": "ÔÜí",
        //    "default": "ÔÑë"
        //}
    },

    "temperature": {
      "critical-threshold": 80,
      "interval": 5,
      "format": "{icon}  {temperatureC}¬∞C",
      "format-icons": [
          "Ôãã", // Icon: temperature-empty
          "Ôãä", // Icon: temperature-quarter
          "Ôãâ", // Icon: temperature-half
          "Ôãà", // Icon: temperature-three-quarters
          "Ôãà"  // Icon: temperature-full
      ],
      "tooltip": true
    },

    "tray": {
        "icon-size": 21,
        "spacing": 5
    }

}
